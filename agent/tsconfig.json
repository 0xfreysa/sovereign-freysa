{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": ".",
    "composite": false,
    "paths": {
      "@/*": ["src/*"],
      "@/common/*": ["src/common/*"],
      "@/packages/*": ["src/packages/*"]
    }
  },
  "include": ["src/**/*", "src"],
  "exclude": ["node_modules", "**/dist", "**/*.test.ts", "**/*.spec.ts", "dist"]
}
